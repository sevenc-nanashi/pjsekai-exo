                set = true
                time, score, add, width, rank = tonumber(match[1]), tonumber(match[2]), tonumber(match[3]), tonumber(match[4]), match[5]
                break
            end
            match = nmatch
            -- debug_print(tonumber(match))
            -- debug_print((tonumber(time) * obj.framerate))
        elseif header == "p" then
            path = data
        end
    end
end
io.close(fp)
